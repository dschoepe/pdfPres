# Contributor: vain
# Maintainer: vain
pkgname=pdfpres
pkgver=0.2
pkgrel=1
pkgdesc="Dual head PDF presenter"
arch=('i686')
url="http://github.com/vain/pdfPres"
license=('GPL')

# Actually, gtk2 and libxml2 are needed, too, but they're dependencies
# of poppler-glib.
depends=('poppler-glib')

makedepends=('scons')
source=(http://github.com/vain/pdfPres/tarball/pdfPres-$pkgver)
md5sums=('eaf5065e9f6d309919bd5242b7e49bc1')

build() {
	# Unfortunately, GitHub puts the sha1sum of the *tag* in that
	# filename.
	cd ${srcdir}/vain-pdfPres-bdf3bce || return 1
	scons || return 1

	# Install binary, README and LICENSE.
	install -Dm 644 LICENSE \
		"${pkgdir}/usr/share/licenses/${pkgname}/LICENSE" || return 1
	install -Dm 644 README.md \
		"${pkgdir}/usr/share/doc/${pkgname}/README.md" || return 1
	install -Dm 755 pdfPres \
		"${pkgdir}/usr/bin/pdfPres" || return 1
}
